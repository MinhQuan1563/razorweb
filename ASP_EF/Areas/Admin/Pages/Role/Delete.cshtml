@page "/admin/delete-role/{roleid}"
@model ASP_EF.Areas.Admin.Pages.Role.DeleteModel
@{
    ViewData["Title"] = "Xóa role";
}

<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage" />

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <p>Bạn có chắc muốn xóa role '@Model.Role.Name' này không?</p>

            <div class="form-group mt-2">
                <input type="submit" value="Đồng ý" class="btn btn-danger" />
                <a class="btn btn-secondary" asp-page="./Index">Danh sách các role</a>
            </div>
        </form>
    </div>
</div>

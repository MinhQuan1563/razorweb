@using Microsoft.AspNetCore.Authorization

@inject IAuthorizationService authorizationService

@{
    var resultAuthorize = await authorizationService.AuthorizeAsync(this.User, "ShowAdminMenu");
}

@if (resultAuthorize.Succeeded)
{
    <li class="dropdown">
        <a class="nav-item nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
            Manage
        </a>
        <div class="dropdown-menu">
            <a asp-page="/Role/Index" asp-area="Admin" class="dropdown-item">Quan ly role</a>
            <div class="dropdown-divider"></div>
            <a asp-page="/User/Index" asp-area="Admin" class="dropdown-item">Quan ly user</a>
        </div>
    </li>
}